<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="toolshub.Navbar">
        <nav class="bg-(--bg-secondary) shadow-lg sticky top-0 z-50 transition-colors duration-300">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16 sm:h-20">
                    <!-- Logo -->
                    <div class="flex items-center space-x-3 flex-shrink-0">
                        <i class="fa fa-toolbox text-2xl sm:text-3xl text-(--text-primary)"></i>
                        <span class="text-xl sm:text-2xl font-bold bg-clip-text ">
                            Toolshub
                        </span>
                    </div>

                    <!-- Desktop Navigation -->
                    <div class="flex items-center space-x-1">
                        <button
                            t-on-click="() => this.props.onNavigate('rent')"
                            t-att-class="{
                                'px-4 py-2 rounded-lg font-medium transition-all duration-200)': true,
                                'nav-btn-active': props.currentPage === 'rent',
                                'nav-btn': props.currentPage !== 'rent'
                            }"
                        >
                            <i class="fa fa-store mr-2"></i>Rent Tools
                        </button>
                        <button
                            t-on-click="() => this.props.onNavigate('rented-by-me')"
                            t-att-class="{
                                'px-4 py-2 rounded-lg font-medium transition-all duration-200': true,
                                'nav-btn-active': props.currentPage === 'rented-by-me',
                                'nav-btn': props.currentPage !== 'rented-by-me'
                            }"
                        >
                            <i class="fa fa-shopping-bag mr-2"></i>Rented by Me
                        </button>
                        <button
                            t-on-click="() => this.props.onNavigate('rented-out')"
                            t-att-class="{
                                'px-4 py-2 rounded-lg font-medium transition-all duration-200': true,
                                'nav-btn-active': props.currentPage === 'rented-out',
                                'nav-btn': props.currentPage !== 'rented-out'
                            }"
                        >
                            <i class="fa fa-hand-holding-usd mr-2"></i>Rented Out
                        </button>
                    </div>

                    <!-- Right Section -->
                    <div class="flex items-center space-x-3">
                        <ThemeToggle/>
                        
                        <!-- User Menu -->
                        <div class="relative">
                            <button
                                t-on-click="toggleUserMenu"
                                class="flex items-center space-x-2 px-3 py-2 rounded-lg"
                            >
                                <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-(--bg-secondary) flex items-center justify-center text-(--text-primary) font-semibold text-sm sm:text-base hover:bg-(--primary-color)">
                                    <t t-esc="props.user?.name?.charAt(0)?.toUpperCase() || 'U'"/>
                                </div>
                                <i class="fa fa-chevron-down text-sm text-gray-600 dark:text-gray-300 hidden sm:block"></i>
                            </button>

