<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Transient wizard form -->
    <record id="view_rent_payment_wizard_form" model="ir.ui.view">
        <field name="name">toolshub.rent.payment.wizard.form</field>
        <field name="model">toolshub.rent.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Rent Payment">
                <group>
                    <field name="rent_listing_id" readonly="0"/>
                    <field name="buyer_id"/>
                    <field name="payment_method_id" default="pm_card_visa"/>
                    <field name="confirm"/>
                    <field name="application_fee_amount"/>
                </group>
                <footer>
                    <button string="Pay Rent" type="object" name="action_process_payment" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action & Window to open wizard -->
    <record id="action_rent_payment_wizard" model="ir.actions.act_window">
        <field name="name">Rent Payment</field>
        <field name="res_model">toolshub.rent.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_rent_payment_wizard_form"/>
    </record>
</odoo>
