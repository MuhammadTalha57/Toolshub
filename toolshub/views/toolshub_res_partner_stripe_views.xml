<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_toolshub_connect_stripe" model="ir.actions.server">
        <field name="name">Open Stripe Onboarding</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">
            action = {
                'type': 'ir.actions.act_url',
                'url': '/toolshub/stripe/create_account_link?partner_id=%d' % (record.id),
                'target': 'self',
            }
        </field>
    </record>


    <!-- Add stripe_account_id field on partner form (in toolshub module scope) -->
    <record id="view_partner_form_inherit_toolshub" model="ir.ui.view">
        <field name="name">res.partner.form.toolshub.stripe</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <group>
                    <field name="stripe_account_id" placeholder="Stripe Connect Account ID"/>
                    <button name="%(toolshub.action_toolshub_connect_stripe)d" type="action" string="Connect Stripe" class="btn-primary" />
                </group>
            </sheet>
        </field>
    </record>

