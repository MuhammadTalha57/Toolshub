<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <!-- Features Form View -->
    <record id="toolshub_tool_plan_features_form_view" model="ir.ui.view">
        <field name="name">toolshub.tool.plan.features.form.view</field>
        <field name="model">toolshub.tool.plan.features</field>
        <field name="arch" type="xml">
            <form string="Feature">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>